{
	"extends": [
		"@tsconfig/strictest/tsconfig"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"noEmitOnError": true,
		"resolveJsonModule": true,
		"moduleResolution": "nodenext",
		"jsx": "react",
		"baseUrl": "./",
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
			}
		],
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@styles/*": [
				"src/styles/*"
			],
			"@assets/*": [
				"assets/*"
			],
		}
	},
	"include": [
		"src/**/*"
	]
}