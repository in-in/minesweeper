{
	"extends": [
		"@tsconfig/strictest/tsconfig"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"noEmitOnError": true,
		"resolveJsonModule": true,
		"moduleResolution": "nodenext",
		"jsx": "react-jsx",
		"baseUrl": "./",
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
			}
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@root/*": [
				"./*"
			]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS",
			"allowSyntheticDefaultImports": true,
		}
	},
	"include": [
		".config/webpack.config.ts",
		".config/paths.ts",
		"src/**/*",
		"src/cypress.d.ts"
	]
}
